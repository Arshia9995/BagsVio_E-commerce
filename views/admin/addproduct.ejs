              categoryError.style.color = 'red';
              isValid = false;
            } else {
              categoryError.textContent = '';
              categoryError.style.display = 'none';
            }

            // Brand
            if (productBrandInput.value.trim() === '') {
              brandError.textContent = 'Please enter a brand.';
