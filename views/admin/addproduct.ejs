            } else {
              discountAmountError.textContent = '';
              discountAmountError.style.display = 'none';
            }

            // other validations 

            if (!isValid) {
              console.log('Form validation failed. Stopping submission.');
              event.preventDefault();
            } else {
              console.log('Form is valid. Submitting...');
