            // Discount Amount
            var discountAmountValue = parseFloat(productDiscountAmountInput.value);
            if (isNaN(discountAmountValue) || discountAmountValue <= 0) {
              discountAmountError.textContent = 'Please enter a valid positive number.';
              discountAmountError.style.color = 'red';
