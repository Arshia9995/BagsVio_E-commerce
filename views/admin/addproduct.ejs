            //         // Check if at least one image is selected
            //         if (images.length === 0) {
            //         fileError.textContent = 'Please upload at least one image.';
            //         isValid = false;
            //     }

            //          // Check each selected image file
            //         for (var i = 0; i < images.length; i++) {
            //         var image = images[i];
            //         var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;

            //         // Check file extension
            //         if (!allowedExtensions.test(image.name)) {
            //         fileError.textContent = 'Invalid file type. Please upload images with extensions: .jpg, .jpeg, .png, .gif';
            //         isValid = false;
            //     }

            //          // Check file size (adjust the size limit as needed)
            //         var maxSizeInBytes = 5 * 1024 * 1024; // 5 MB
            //         if (image.size > maxSizeInBytes) {
            //         fileError.textContent = 'File size exceeds the limit. Please upload images up to 5 MB.';
            //         isValid = false;
            //     }
            //   }
