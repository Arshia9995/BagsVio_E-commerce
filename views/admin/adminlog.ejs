      <div class="col-md-6 bg-white p-5 shadow-lg">
        <h3 class="pb-3 text-center">Admin Login</h3>
        <div class="form-style">
          <form action="/admin/adminlog" method="post">
            <div class="form-group pb-3">
              <input type="email" placeholder=" Enter Your Email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
