<%- include('header')-%>

<%- include('sidebar') -%>

<style>
.admin-content-container {
  margin-left: 0;
}
@media (min-width: 992px) {
  .admin-content-container {
    margin-left: 230px;
  }
}
</style>

<div class="container mt-5 admin-content-container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Order List</h2>
  </div>
  <div class="table-responsive" style="margin-top: 20px;">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>No</th>
          <th>Customer Name</th>
          <th>Order Id</th>
          <th>Order Status</th>
          <th>Total</th>
          <th>Payment Status</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach((orderItem,index)=>{ %>
          <tr>
            <td>
              <%= (currentPage - 1) * perPage + index + 1 %>
            </td>
            <td>
              <%= orderItem.userId.name %>
            </td>
            <td><%= orderItem.orderId %></td>
            <td><%= orderItem.status %></td>
            <td><%= orderItem.totalPrice %></td>
            <td><%= orderItem.paymentStatus %></td>
            <td>
              <a href='/admin/orderview/<%= orderItem._id %>' class="btn btn-info">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <ul class="pagination justify-content-center">
    <% if (currentPage > 1) { %>
      <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a></li>
    <% } %>
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>
    <% if (currentPage < totalPages) { %>
      <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a></li>
    <% } %>
  </ul>
</div>

<%- include('footer')-%>