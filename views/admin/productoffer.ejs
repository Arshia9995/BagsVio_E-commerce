<!-- JavaScript to fetch product names and populate the dropdown -->
<script>
  // Function to fetch product names and populate the dropdown
  async function fetchProductNames() {
    try {
      // Fetch product names from the backend
      const response = await fetch("/admin/products");
      if (!response.ok) {
        throw new Error("Failed to fetch product names");
      }
      const data = await response.json();
      const productNames = data.productNames;

      // Populate the dropdown with product names
      const productNameDropdown = document.getElementById("productName");
      productNames.forEach((productName) => {
        const option = document.createElement("option");
        option.text = productName;
        productNameDropdown.add(option);
      });
    } catch (error) {
      console.error("Error fetching product names:", error);
    }
  }

  // Call the fetchProductNames function when the page is loaded
  document.addEventListener("DOMContentLoaded", fetchProductNames);
</script>




<!-- JavaScript to fetch product names and populate the dropdown -->
<script>
    // Function to fetch product names and populate the dropdown
    async function fetchProductNamesForEditModal(modal) {
    try {
        // Fetch product names from the backend
        const response = await fetch("/admin/products");
        if (!response.ok) {
            throw new Error("Failed to fetch product names");
        }
        const data = await response.json();
        const productNames = data.productNames;

        // Populate the dropdown with product names
        const editProductNameDropdown = modal.querySelector("#editProductName");
        editProductNameDropdown.innerHTML = ''; // Clear previous options
        productNames.forEach((productName) => {
            const option = document.createElement("option");
            option.text = productName;
            editProductNameDropdown.add(option);
        });

        // Set the selected product name in the dropdown
        var button = event.relatedTarget;
        var productName = button.getAttribute('data-product-name');
        editProductNameDropdown.value = productName;
    } catch (error) {
        console.error("Error fetching product names for edit modal:", error);
    }
}

    // Call the fetchProductNamesForEditModal function when the modal is shown
    document.querySelectorAll('.modal').forEach(function(modal) {
    modal.addEventListener('show.bs.modal', function(event) {
        // Call the function to fetch product names for edit modal
        fetchProductNamesForEditModal(modal);
    });
});

</script>
