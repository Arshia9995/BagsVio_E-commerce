        </form>
        <div class="icons">
          <a href="/profile">
            <i class="fa fa-user text-dark" aria-hidden="true"></i>
          </a>
          <a href="/cart">
            <i class="fa fa-shopping-cart text-dark" aria-hidden="true"></i>
