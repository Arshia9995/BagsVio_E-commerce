<%- include('header')-%>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="row m-5 justify-content-center">
      <div class="col-md-6 bg-white p-5 shadow-lg">
        <h3 class="pb-3 text-center">Sign Up Form</h3>
        <% if(locals.err){ %>
        <p style="color:red"> <%=err %></p>
        <% } %>
        
        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger" role="alert">
              <%= messages[0] %>
          </div>
      <% } %>
      
        <div class="form-style">
          <form action="/signup" method="post" id="form">
            <div class="form-group pb-3">
              <input type="text" name="name" placeholder="Name" class="form-control" oninput=" validateUserName()" id="username" required >
              <p id="nameCheck" class="text-danger"></p>
            </div>
            <div class="form-group pb-3">
              <input type="email" name="email" placeholder="Email" class="form-control" oninput="validateUserEmail()" id="email" required>
              <p id="emailCheck" class="text-danger"></p>

              
            </div>





            <div class="form-group pb-3">
              <input type="password" name="password" placeholder="Password" class="form-control" oninput="validatePassword()" id="password" required>
              <p id="messagePwd" class="text-danger"></p>
            </div>

           




            <div class="form-group pb-3">
              <input type="password" name="confirmPassword" placeholder="Confirm Password" class="form-control" oninput="checkPasswordMatch()" id="confirm-password">
              <p id="messagePwdMatch" class="text-danger"></p>
            </div>
            <div class="d-flex align-items-center justify-content-between">
             
             
            </div>
            <div class="pb-2">
              <button type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">Sign Up</button>
            </div>
          </form>
          
          
          <div class="pt-4 text-center">
            Already have an account? <a href="/login">Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/user-footer') %>
  <%- include('footer')-%>